{% extends 'base.html.twig' %}

{% block title %}Build de {{app.user.name}}{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <h1 class="py-5">Build de {{app.user.name}}</h1>
            <div class="col-md-12">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Personnage</th>
                            <th>Véhicule</th>
                            <th>Roues</th>
                            <th>Deltaplane</th>
                            <th>Créé par</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for build in builds %}
                            <tr>
                                <td class="align-middle">{{build.name}}</td>
                                <td class="align-middle"><img src="../assets/images/characters/{{ build.chara.image }}"></td>
                                <td class="align-middle"><img src="../assets/images/karts/{{ build.kart.image }}"></td>
                                <td class="align-middle"><img src="../assets/images/wheels/{{ build.wheel.image }}"></td>
                                <td class="align-middle"><img src="../assets/images/hangliders/{{ build.hanglider.image }}"></td>
                                <td class="align-middle">{{build.user.email}}</td>
                                <td class="align-middle">
                                    <a href="{{ path('build_edit', {'id': build.id}) }}">Edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="3">no records found</td>
                            </tr>
                        {% endfor %}
                        
                    </tbody>
                </table>
                <a href="{{ path('build_new') }}" class="btn btn-primary">Créer un build</a>
            </div>
        </div>
    </div>
{% endblock %}
