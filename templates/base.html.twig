<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% if app.user %}
            {# navbar #}
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark p-3">
                <a class="navbar-brand" href="{{ path('home') }}">Home</a>
                <a class="navbar-brand" href="{{ path('profile') }}">Profile</a>
                <a class="navbar-brand" href="{{ path('app_logout') }}">Logout</a>
            </nav>
        {% else %}

            <nav class="navbar navbar-expand-lg navbar-dark bg-dark p-3">
                <a class="navbar-brand" href="{{ path('home') }}">Home</a>
                <a class="navbar-brand" href="{{ path('app_login') }}">Login</a>
                <a class="navbar-brand" href="{{ path('app_register') }}">Register</a>
            </nav>

        {% endif %}
        {% block body %}
        {% endblock %}
    </body>
</html>
